@{
    ViewData["Title"] = "ResetHandle";
}

<head>
    <style>
        .form-container {
            width: 300px;
            padding: 20px;
            background-color: white;
            border: 2px solid black;
            border-radius: 10px;
            margin: 20px;
            position: absolute;
        }
    </style>
</head>
<body>
    <h2>Mudar Handle</h2>
    <p>Introduza o seu novo handle.</p>
    <div class="form-container">
        <form asp-action="ResetHandle" asp-controller="Account" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="text" name="Handle" placeholder="Novo Handle" />
            <br />
            <button type="submit">Alterar</button>
        </form>
    </div>
</body>


