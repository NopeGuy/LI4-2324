@model IEnumerable<Noitcua.Models.sala>
<!DOCTYPE html>
<html>
    <head>
        <style>
            .search-container {
                width: 600px;
                padding: 20px;
                background-color: white;
                border: 2px solid black;
                border-radius: 10px;
                margin: 20px;
            }

            .result-container {
                width: 600px;
                margin: 20px;
            }

            .result-box {
                width: 100%;
                padding: 15px;
                background-color: #ccc;
                border: 2px solid black;
                border-radius: 10px;
                margin-bottom: 10px;
            }

            .result-title {
                font-weight: bold;
                margin-bottom: 5px;
            }

            .result-date {
                color: gray;
            }
        </style>
    </head>
    <body>
    <div class="search-container">
        <form method="get" action="@Url.Action("PesquisarSalas", "Sala")">
            <label for="searchQuery">Procurar Salas:</label>
            <input type="text" id="searchQuery" name="searchQuery" />
            <button type="submit">Pesquisar</button>
        </form>
    </div>

    <div>
        <a class="create-room-button" href="@Url.Action("CriarSala", "Sala")">Criar Nova Sala</a>
    </div>

    
    <div class="result-container">
        @foreach (var sala in Model)
        {
            <div class="result-box">
                <div class="result-title">@sala.titulo</div>
                <span>@sala.descricao</span><br />
                <a href="@Url.Action("EntrarSala", "Sala", new { salaId = sala.id })">Entrar na Sala</a>
            </div>
        }
    </div>
    
    </body>
</html>