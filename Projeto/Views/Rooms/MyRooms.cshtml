@model IEnumerable<Noitcua.Models.sala>
@{
    ViewData["Title"] = "MyRooms";
}

<!DOCTYPE html>
<html>
    <head>
        <style>
            .result-box {
                width: 100%;
                padding: 15px;
                background-color: #ccc;
                border: 2px solid black;
                border-radius: 10px;
                margin-bottom: 10px;
            }

        .result-button {
            text-decoration: none;
            color: black;
            border: 2px solid black;
            padding: 5px;
            border-radius: 15px;
        }
        </style>
    </head>
    <body>    
    <div class="result-container">
        <h2><b>Salas Criadas</b>:</h2>
        @foreach (var sala in Model)
        {
            @if (sala.estado!=2)
            {
                @if (sala.id_comprador != @Context.Session.GetInt32("Id"))
                {
                    <div class="result-box">
                        <div class="result-title"><b>@sala.titulo</b></div>
                        <br />
                        <span>@sala.descricao</span>
                        <br /><br />
                        <a class="result-button" href="@Url.Action("View", "Rooms", new {id=sala.id})">Entrar na Sala</a>
                    </div>
                }
            }
        }
        <br />
        <br />
        <h2><b>Outras Salas</b>:</h2>
                @foreach (var sala in Model)
        {
            @if (sala.estado!=2)
            {
                @if (sala.id_comprador == @Context.Session.GetInt32("Id"))
                {
                    <div class="result-box">
                        <div class="result-title"><b>@sala.titulo</b></div>
                            <br />
                        <span>@sala.descricao</span>
                        <br /><br />
                        <a class="result-button" href="@Url.Action("View", "Rooms", new {id=sala.id})">Entrar na Sala</a>
                    </div>
                }
            }
        }
    </div>
    </body>
</html>