        .search-container {
            width: 600px;
            padding: 20px;
            background-color: white;
            border: 2px solid black;
            border-radius: 10px;
            margin: 20px;
        }

        .result-container {
            width: 600px;
            margin: 20px;
        }

        .result-box {
            width: 100%;
